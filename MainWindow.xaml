                                                                                                            <i:InvokeCommandAction Command="{Binding DataContext.FilmPosterAç, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type GroupBox}}}" CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}" />
                                                                                                        </i:EventTrigger>
                                                                                                    </i:Interaction.Triggers>
                                                                                                </Image>
                                                                                            </DataTemplate>
                                                                                        </DataGridTemplateColumn.CellTemplate>
                                                                                    </DataGridTemplateColumn>
                                                                                    <DataGridTemplateColumn Header="SKOR">
                                                                                        <DataGridTemplateColumn.CellTemplate>
                                                                                            <DataTemplate>
                                                                                                <ProgressBar Height="{Binding RowHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}}" Orientation="Vertical" Value="{Binding XPath=/root/movie/@metascore}" />
                                                                                            </DataTemplate>
                                                                                        </DataGridTemplateColumn.CellTemplate>
                                                                                    </DataGridTemplateColumn>
                                                                                </DataGrid.Columns>
                                                                            </DataGrid>
                                                                        </GroupBox>
                                                                    </c1:C1DropDownButton>
                                                                </StackPanel>
                                                            </c1:C1DropDownButton>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                    <GridSplitter
                                        Grid.Row="1"
                                        Height="3"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Background="{StaticResource Common_HeaderBackgroundColor}" />
                                    <ScrollViewer
                                        Grid.Row="2"
                                        IsEnabled="{Binding AktifMi}"
                                        ScrollViewer.IsDeferredScrollingEnabled="True"
                                        VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding Koltuklar}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Visibility="{Binding KoltukGorunmezMi, Converter={StaticResource SeansButtonVisibilityConverter}}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="7*" />
                                                            <ColumnDefinition Width="2*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Viewbox Grid.Column="1" Visibility="{Binding Salonlar.KoltukDetay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <ListBox ItemsSource="{Binding Musteriler}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" SelectionMode="Single">
                                                                <ListBox.Resources>
                                                                    <Style TargetType="{x:Type ListBox}">
                                                                        <Setter Property="BorderBrush" Value="{x:Null}" />
                                                                        <Setter Property="Foreground" Value="{x:Null}" />
                                                                        <Setter Property="Background" Value="{x:Null}" />
                                                                    </Style>
                                                                </ListBox.Resources>
                                                                <ListBox.ItemContainerStyle>
                                                                    <Style TargetType="{x:Type ListBoxItem}">
                                                                        <Setter Property="Padding" Value="0" />
                                                                        <Setter Property="BorderThickness" Value="0" />
                                                                        <Setter Property="Visibility" Value="{Binding Seanslar.FilmSaati, Mode=OneWay, Converter={StaticResource SeansTarihGeçtiVisibilityConverter}}" />
                                                                    </Style>
                                                                </ListBox.ItemContainerStyle>
                                                                <ListBox.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <UniformGrid Columns="{Binding KoltukÖnizlemeKolonSayısı}" DataContext="{Binding DataContext, ElementName=SliderÖnizleme}" />
                                                                    </ItemsPanelTemplate>
                                                                </ListBox.ItemsPanel>
                                                                <ListBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Path Width="24" Height="24" Data="{StaticResource FaceIcon}" Fill="{Binding Seanslar.Renk, Mode=OneWay, Converter={StaticResource IntToColorConverter}}">
                                                                            <!--<Path.ToolTip>
                                                                                <StackPanel>
                                                                                    <TextBlock Text="{Binding MusteriAdi, Mode=OneWay}" />
                                                                                    <TextBlock Text="{Binding MusteriSoyadi, Mode=OneWay}" />
                                                                                    <ListView Margin="5" ItemsSource="{Binding Siparisler, IsAsync=True}">
                                                                                        <ListView.View>
                                                                                            <GridView>
                                                                                                <GridViewColumn Header="ÜRÜN ADI" DisplayMemberBinding="{Binding Urunler.UrunAdi, Mode=OneWay}" />
                                                                                                <GridViewColumn Header="SİPARİŞ ADETİ" DisplayMemberBinding="{Binding SiparisAdet, Mode=OneWay}" />
                                                                                                <GridViewColumn Header="TOPLAM TUTAR" DisplayMemberBinding="{Binding ToplamTutar, Mode=OneWay, StringFormat=\{0:C\}}" />
                                                                                            </GridView>
                                                                                        </ListView.View>
                                                                                    </ListView>
                                                                                </StackPanel>
                                                                            </Path.ToolTip>-->
                                                                        </Path>
                                                                    </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                            </ListBox>
                                                        </Viewbox>
                                                        <Button
                                                            Content="{Binding Converter={StaticResource KoltukNoSıraConverter}, Mode=OneWay}"
                                                            Grid.Column="0"
                                                            Command="{Binding MüşteriDialog, Mode=OneWay}"
                                                            CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Mode=Self}}"
                                                            ContextMenuService.ShowOnDisabled="{Binding Salonlar.AktifMi}"
                                                            IsEnabled="{Binding KoltukAktifMi}"
                                                            Style="{StaticResource GridButtonRenkleriStyle}">
                                                            <Button.ToolTip>
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding KoltukNo, Mode=OneWay, StringFormat=Koltuk No: \{0\}}" />
                                                                    <TextBlock Text="{Binding KoltukTipleri.KoltukTipi, Mode=OneWay, StringFormat=Koltuk Tipi: \{0\}}" />
                                                                    <TextBlock Text="{Binding KoltukTipleri.KoltukFiyati, Mode=OneWay, StringFormat=Koltuk Fiyatı: \{0:C\}}" />
                                                                    <ListView Margin="5" ItemsSource="{Binding Musteriler, IsAsync=True}">
                                                                        <ListView.ItemContainerStyle>
                                                                            <Style TargetType="{x:Type ListViewItem}">
                                                                                <Setter Property="Visibility" Value="{Binding Seanslar.FilmSaati, Mode=OneWay, Converter={StaticResource SeansTarihGeçtiVisibilityConverter}}" />
                                                                            </Style>
                                                                        </ListView.ItemContainerStyle>
                                                                        <ListView.View>
                                                                            <GridView>
                                                                                <GridViewColumn>
                                                                                    <GridViewColumn.CellTemplate>
                                                                                        <DataTemplate>
                                                                                            <Ellipse Width="16" Height="16" Fill="{Binding Seanslar.Renk, Mode=OneWay, Converter={StaticResource IntToColorConverter}}" />
                                                                                        </DataTemplate>
                                                                                    </GridViewColumn.CellTemplate>
                                                                                </GridViewColumn>
                                                                                <GridViewColumn Header="ADI" DisplayMemberBinding="{Binding MusteriAdi, Mode=OneWay}" />
                                                                                <GridViewColumn Header="SOYADI" DisplayMemberBinding="{Binding MusteriSoyadi, Mode=OneWay}" />
                                                                                <GridViewColumn Header="FİLM" DisplayMemberBinding="{Binding Seanslar.Filmler.FilmAdi, Mode=OneWay}" />
                                                                                <GridViewColumn Header="TARİH" Width="125" DisplayMemberBinding="{Binding Seanslar.FilmSaati, Mode=OneWay}" />
                                                                                <GridViewColumn Header="TAHSİLAT" DisplayMemberBinding="{Binding Tahsilatlar/Tutar, Mode=OneWay, StringFormat=\{0:C\}}" />
                                                                                <GridViewColumn Header="RESİM" Width="80">
                                                                                    <GridViewColumn.CellTemplate>
                                                                                        <DataTemplate>
                                                                                            <Image Source="{Binding Resim, ConverterParameter=120, Mode=OneWay, Converter={StaticResource ByteArrayToImageSource}, IsAsync=True}" Visibility="{Binding Resim, Converter={StaticResource NullToCollapsedVisibilityConverter}}" />
                                                                                        </DataTemplate>
                                                                                    </GridViewColumn.CellTemplate>
                                                                                </GridViewColumn>
                                                                            </GridView>
                                                                        </ListView.View>
                                                                    </ListView>
                                                                </StackPanel>
                                                            </Button.ToolTip>
                                                            <Button.ContextMenu>
                                                                <ContextMenu IsEnabled="{Binding Salonlar.AktifMi}">
                                                                    <MenuItem
                                                                        Header="KOLTUK GİZLE"
                                                                        Command="{Binding KoltukDurum, Mode=OneWay}"
                                                                        IsCheckable="True"
                                                                        IsChecked="{Binding KoltukGorunmezMi}">
                                                                        <MenuItem.ToolTip>
                                                                            <TextBlock Text="Gizlenmiş Koltuğu Göstermek İçin Salon Oluşturma Ekranına Bakın." />
                                                                        </MenuItem.ToolTip>
                                                                    </MenuItem>
                                                                    <MenuItem
                                                                        Header="KOLTUK ETKİN"
                                                                        Command="{Binding KoltukDurum}"
                                                                        IsCheckable="True"
                                                                        IsChecked="{Binding KoltukAktifMi}" />
                                                                    <MenuItem Header="KOLTUK TİPİNİ DEĞİŞTİR">
                                                                        <MenuItem.Resources>
                                                                            <StackPanel x:Key="MenuItemHeader" x:Shared="false" Orientation="Horizontal">
                                                                                <TextBlock Text="{Binding KoltukTipi}" />
                                                                                <TextBlock Text="{Binding KoltukFiyati, StringFormat=' \{0:C\}'}" />
                                                                            </StackPanel>
                                                                        </MenuItem.Resources>
                                                                        <MenuItem.ItemsSource>
                                                                            <Binding Path="KoltukTipleriCollection" Source="{StaticResource SinemaModel}" />
                                                                        </MenuItem.ItemsSource>
                                                                        <MenuItem.Icon>
                                                                            <Rectangle Width="16" Height="16" Fill="{Binding KoltukTipleri.KoltukRenk, Converter={StaticResource IntToBrushConverter}}" />
                                                                        </MenuItem.Icon>
                                                                        <MenuItem.ItemContainerStyle>
                                                                            <Style TargetType="{x:Type MenuItem}">
                                                                                <Setter Property="Icon" Value="{StaticResource ContextRectangle}" />
                                                                                <Setter Property="Header" Value="{StaticResource MenuItemHeader}" />
                                                                                <Setter Property="Command" Value="{Binding DataContext.KoltukTipiDeğiştir, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}" />
                                                                                <Setter Property="CommandParameter">
                                                                                    <Setter.Value>
                                                                                        <MultiBinding Converter="{StaticResource CloneConverter}">
                                                                                            <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType={x:Type Button}}" />
                                                                                            <Binding />
                                                                                        </MultiBinding>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                            </Style>
                                                                        </MenuItem.ItemContainerStyle>
                                                                    </MenuItem>
                                                                </ContextMenu>
                                                            </Button.ContextMenu>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid x:Name="UgKoltuklar" Columns="{Binding En}" Rows="{Binding Boy}" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>

                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>