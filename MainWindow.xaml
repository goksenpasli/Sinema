<Window
    x:Class="Sinema.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:WPFMediaKit="clr-namespace:WPFMediaKit.DirectShow.Controls;assembly=WPFMediaKit"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ice="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:local="clr-namespace:Sinema"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="Sinema"
    Width="800"
    Height="600"
    d:DesignHeight="600"
    d:DesignWidth="1280"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <local:YetkilerToListConverter x:Key="YetkilerToListConverter" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:KoltukNoSıraConverter x:Key="KoltukNoSıraConverter" />
        <local:MüşterilerKoltukNoSıraConverter x:Key="MüşterilerKoltukNoSıraConverter" />
        <local:EnglishtoTurkishTranslateConverter x:Key="EnglishtoTurkishTranslateConverter" />
        <local:NullToCollapsedVisibilityConverter x:Key="NullToCollapsedVisibilityConverter" />
        <local:VideoRendererConverter x:Key="VideoRendererConverter" />
        <local:PathToUriConverter x:Key="PathToUriConverter" />
        <local:ByteArrayToImageSource x:Key="ByteArrayToImageSource" />
        <local:BooleanAllNotNullConverter x:Key="BooleanAllNotNullConverter" />
        <local:SeansButtonVisibilityConverter x:Key="SeansButtonVisibilityConverter" />
        <local:CloneConverter x:Key="CloneConverter" />
        <local:PathToFileInfoConverter x:Key="PathToFileInfoConverter" />
        <local:SeansTarihGeçtiVisibilityConverter x:Key="SeansTarihGeçtiVisibilityConverter" />
        <local:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
        <local:IntToBrushConverter x:Key="IntToBrushConverter" />
        <local:NegateBooleanConverter x:Key="NegateBooleanConverter" />
        <local:Kullanicilar x:Key="Kullanicilar" />
        <local:SinemaModel x:Key="SinemaModel" />
        <local:Koltuklar x:Key="Koltuklar" />
        <local:KoltukTipleri x:Key="KoltukTipleri" />
        <local:Filmler x:Key="Filmler" />
        <local:Salonlar x:Key="Salonlar" />
        <local:Seanslar x:Key="Seanslar" />
        <local:Urunler x:Key="Urunler" />
        <local:SeansTarihAndSalonAktifConverter x:Key="SeansTarihAndSalonAktifConverter" />
        <PopupAnimation x:Key="{x:Static SystemParameters.ToolTipPopupAnimationKey}">Fade</PopupAnimation>
    </Window.Resources>
    <Grid x:Name="LayoutRoot">
        <Image
            x:Name="ImgKullanıcı"
            Width="39"
            Height="39"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Source="{Binding Tag.Resim, IsAsync=True, Converter={StaticResource ByteArrayToImageSource}, ConverterParameter=480, ElementName=window}">
            <Image.ToolTip>
                <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
                    <Image Height="480" ice:Freeze="True" Source="{Binding Source}" />
                </ToolTip>
            </Image.ToolTip>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding ResimKaydet, Source={StaticResource Kullanicilar}}" CommandParameter="{Binding Tag.Resim, ElementName=window}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseRightButtonDown">
                    <i:InvokeCommandAction Command="{Binding KullanıcıResimSil, Source={StaticResource Kullanicilar}}" CommandParameter="{Binding Tag, ElementName=window}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Image>
        <TabControl d:DataContext="{d:DesignInstance {x:Type local:SinemaModel}}" DataContext="{StaticResource SinemaModel}">
            <TabItem Header="SALON&#xA;OLUŞTUR">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="237" />

                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*" />
                        <ColumnDefinition Width="3" />
                        <ColumnDefinition Width="19*" />
                        <ColumnDefinition Width="3" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <GroupBox
                        Header="SALON OLUŞTUR"
                        Grid.Row="0"
                        Margin="0,2,2,2"
                        IsEnabled="{Binding Items.Count, ElementName=DgKoltukTürleri, Mode=OneWay}"
                        Template="{StaticResource TintedGroupBox}">
                        <AdornerDecorator>
                            <Grid x:Name="GdSalonGirişleri" DataContext="{StaticResource Salonlar}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="SALON ADI" />
                                    <TextBox Text="{Binding SalonAdi, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Row="0" Grid.Column="1" />
                                    <TextBlock Text="{Binding Value, ElementName=Slddikey, StringFormat=DİKEY KOLTUK SAYI: \{0\}}" Grid.Row="1" />
                                    <Slider
                                        x:Name="Slddikey"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        AutoToolTipPlacement="TopLeft"
                                        Maximum="60"
                                        Minimum="0"
                                        Value="{Binding Boy, Mode=TwoWay, TargetNullValue=0, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock Text="{Binding Value, ElementName=Sldyatay, StringFormat=YATAY KOLTUK SAYI: \{0\}}" Grid.Row="2" />
                                    <Slider
                                        x:Name="Sldyatay"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        AutoToolTipPlacement="TopLeft"
                                        Maximum="60"
                                        Minimum="0"
                                        Value="{Binding En, Mode=TwoWay, TargetNullValue=0, UpdateSourceTrigger=PropertyChanged}" />
                                    <Button
                                        Grid.Row="3"
                                        Grid.ColumnSpan="2"
                                        Command="{Binding Ekle, Mode=OneWay}"
                                        CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}"
                                        ToolTipService.InitialShowDelay="2500">
                                        <Button.ToolTip>
                                            <StackPanel>
                                                <ContentControl Content="{StaticResource Sahne}" />
                                                <ItemsControl Width="550" Height="350" ItemsSource="{Binding Toplamkoltuk}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border
                                                                Margin="1"
                                                                BorderBrush="Black"
                                                                BorderThickness="1"
                                                                CornerRadius="1">
                                                                <Viewbox>
                                                                    <Grid>
                                                                        <Image Opacity="0.15" RenderOptions.BitmapScalingMode="LowQuality" Source="Icons/cinema.png" />
                                                                        <TextBlock
                                                                            Text="{Binding}"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            FontSize="108" />
                                                                    </Grid>
                                                                </Viewbox>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <UniformGrid Columns="{Binding En, TargetNullValue=0}" Rows="{Binding Boy, TargetNullValue=0}" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Button.ToolTip>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="16" ice:Freeze="True" Source="Icons/shell32_16785.png" />
                                            <AccessText Text="OLUŞ_TUR" />
                                        </StackPanel>
                                    </Button>
                                    <DataGrid
                                        x:Name="DgSalonlar"
                                        Grid.Row="4"
                                        Grid.ColumnSpan="2"
                                        AutoGenerateColumns="False"
                                        CanUserAddRows="False"
                                        ItemsSource="{Binding SalonlarCollection, Source={StaticResource SinemaModel}}">
                                        <DataGrid.RowStyle>
                                            <Style TargetType="{x:Type DataGridRow}">
                                                <Setter Property="ToolTip">
                                                    <Setter.Value>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding DataContext.En, RelativeSource={RelativeSource Mode=Self}, StringFormat=' Yatay: \{0\} Koltuk Var'}" Foreground="Red" />
                                                            <TextBlock Text="{Binding DataContext.Boy, RelativeSource={RelativeSource Mode=Self}, StringFormat=' Dikey: \{0\} Koltuk Var'}" Foreground="Red" />
                                                        </StackPanel>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding SalonAdi}" Header="SALON&#xA;ADI" IsReadOnly="True" />
                                            <DataGridTemplateColumn Header="AKTİF&#xA;Mİ">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox HorizontalAlignment="Center" IsChecked="{Binding AktifMi, UpdateSourceTrigger=PropertyChanged}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn Header="KOLTUK&#xA;DETAY">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox HorizontalAlignment="Center" IsChecked="{Binding KoltukDetay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Bu Seçenek Salonlarda Koltukların Yanında Oturanlara Ait Simgeler Gösterir. Yüksek Performanslı Bilgisayarlarda Açılması Önerilir." />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTemplateColumn>
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button x:Name="BtSalonGüncelle" Command="{Binding Güncelle, Mode=OneWay}" CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}">
                                                            <i:Interaction.Triggers>
                                                                <ei:DataTrigger Binding="{Binding IsEnabled, ElementName=BtSalonGüncelle}" Value="false">
                                                                    <ei:ChangePropertyAction PropertyName="IsEnabled" TargetObject="{Binding ElementName=DgSalonlar}" Value="False" />
                                                                </ei:DataTrigger>
                                                            </i:Interaction.Triggers>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Width="16" ice:Freeze="True" Source="Icons/update.png" />
                                                                <AccessText Text="GÜN_CELLE" />
                                                            </StackPanel>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Grid>
                        </AdornerDecorator>
                    </GroupBox>
                    <GroupBox
                        Header="FİLM EKLE"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Margin="0,2,2,2"
                        DataContext="{StaticResource Filmler}"
                        Template="{StaticResource TintedGroupBox}">
                        <UniformGrid x:Name="UnifGridFilmEkle" Columns="2" Rows="10">
                            <TextBlock Text="FİLM ADI" />
                            <TextBox x:Name="TxFilmAdi" Text="{Binding FilmAdi, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="FİLM TİPİ" />
                            <ComboBox
                                x:Name="CbFilmTipi"
                                VerticalContentAlignment="Center"
                                ItemsSource="{StaticResource FilmTipleri}"
                                SelectedItem="{Binding FilmTipi, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="YÖNETMEN" />
                            <TextBox x:Name="TxYönetmen" Text="{Binding Yonetmeni, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="OYUNCULAR" />
                            <TextBox x:Name="TxOyuncular" Text="{Binding Oyuncular, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="SÜRE (Dakika)" />
                            <TextBox x:Name="TxSüre" Text="{Binding Sure, TargetNullValue='', UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="DİLİ" />
                            <ComboBox
                                x:Name="CbFilmDili"
                                VerticalContentAlignment="Center"
                                ItemsSource="{StaticResource Diller}"
                                SelectedItem="{Binding Dili, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="ÇEKİM TİPİ" />
                            <ComboBox
                                x:Name="CbFilmÇekimTipi"
                                VerticalContentAlignment="Center"
                                ItemsSource="{StaticResource ÇekimTipleri}"
                                SelectedItem="{Binding CekimTipi, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Text="RESİM ÖNİZLEME" />
                            <c1:C1FilePicker
                                x:Name="C1ResimYolu"
                                Background="{StaticResource FilePickerBackground}"
                                Filter="Resim Dosyaları (*.jpg, *.png, *.bmp, *.tif)|*.jpg;*.png;*.bmp;*.tif|Tüm dosyalar (*.*)|*.*"
                                IsTabStop="False"
                                ToolTip="Çok Büyük Resim Yüklemek Menüleri Yavaşlatır. Seçilen Resmin Konumu Değiştirilirse Resim Görünmez." />
                            <TextBlock Text="VİDEO ÖNİZLEME" />
                            <c1:C1FilePicker
                                x:Name="C1VideoYolu"
                                Background="{StaticResource FilePickerBackground}"
                                Filter="Video Dosyaları (*.mp4, *.wmv, *.asf, *.avi, *.mpg, *.mpeg, *.dvr-ms, *.m1v)|*.mp4;*.wmv;*.asf;*.avi;*.mpg;*.mpeg;*.dvr-ms;*.m1v|Tüm dosyalar (*.*)|*.*"
                                IsTabStop="False"
                                ToolTip="Seçilen Videonun Konumu Değiştirilirse Yürütme Gerçekleşmez. Video Seansın Üzerine Tıklayınca Yürütme Başlar Çıkmak İçin Esc Tuşu Kullanılır." />
                            <TextBlock />
                            <Button Command="{Binding Ekle, Mode=OneWay}" CommandParameter="{Binding ElementName=window, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" ice:Freeze="True" Source="Icons/shell32_16785.png" />
                                    <AccessText Text="F_İLM EKLE" />
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </GroupBox>
                    <GridSplitter
                        Grid.RowSpan="4"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Background="{StaticResource Common_HeaderBackgroundColor}" />
                    <GroupBox
                        Header="KOLTUK-ÜRÜN AYARLA"
                        Grid.Row="0"
                        Grid.RowSpan="4"
                        Grid.Column="2"
                        Margin="2,2,2,0"
                        Template="{StaticResource TintedGroupBox}">
                        <UniformGrid Columns="1" Rows="3">
                            <GroupBox Header="SALON KOLTUK AYARLA" Margin="0,0,0,2" Template="{StaticResource TintedGroupBox}">
                                <DataGrid
                                    x:Name="DgKoltukTipleri"
                                    Margin="0,0,0,2"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    ItemsSource="{Binding SalonlarCollection}"
                                    RowStyle="{StaticResource PasifGrid}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding SalonAdi}" Header="SALON&#xA;ADI" IsReadOnly="True" />
                                        <DataGridTemplateColumn Header="KOLTUK&#xA;BAŞLANGIÇ NO">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding Başlangıç, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Background="{x:Null}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="KOLTUK&#xA;BİTİŞ NO">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding Bitiş, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Background="{x:Null}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="KOLTUK&#xA;TÜRÜ">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <ComboBox ItemsSource="{Binding KoltukTipleriCollection, Source={StaticResource SinemaModel}}" SelectedItem="{Binding KoltukTipi, UpdateSourceTrigger=PropertyChanged}">
                                                        <ComboBox.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" />
                                                            </ItemsPanelTemplate>
                                                        </ComboBox.ItemsPanel>
                                                        <ComboBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Rectangle Width="16" Height="16" Fill="{Binding KoltukRenk, Converter={StaticResource IntToBrushConverter}}" />
                                                                    <TextBlock Text="{Binding KoltukTipi}" />
                                                                    <TextBlock Text="{Binding KoltukFiyati, StringFormat=' \{0:C\}'}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ComboBox.ItemTemplate>
                                                    </ComboBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="KOLTUK UYGULAMA&#xA;SIRASI">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <RadioButton Content="YATAY" IsChecked="{Binding YatayUygula, UpdateSourceTrigger=PropertyChanged}">
                                                            <RadioButton.ToolTip>
                                                                <StackPanel Width="220" Height="200">
                                                                    <TextBlock Text="Bunu Salondaki Koltukları Yatay Şekilde Ayarlamak İçin Kullanabilirsiniz." Foreground="Red" TextWrapping="Wrap" />
                                                                    <ContentControl Content="{StaticResource Yatay}" />
                                                                </StackPanel>
                                                            </RadioButton.ToolTip>
                                                        </RadioButton>
                                                        <RadioButton Content="DİKEY" IsChecked="{Binding DikeyUygula, UpdateSourceTrigger=PropertyChanged}">
                                                            <RadioButton.ToolTip>
                                                                <StackPanel Width="220" Height="200">
                                                                    <TextBlock Text="Bunu Salondaki Koltukları Dikey Şekilde Ayarlamak İçin Kullanabilirsiniz." Foreground="Red" TextWrapping="Wrap" />
                                                                    <ContentControl Content="{StaticResource Dikey}" />
                                                                </StackPanel>
                                                            </RadioButton.ToolTip>
                                                        </RadioButton>
                                                        <RadioButton Content="KARE" IsChecked="{Binding Dikdörtgenuygula, UpdateSourceTrigger=PropertyChanged}">
                                                            <RadioButton.ToolTip>
                                                                <StackPanel Width="220" Height="200">
                                                                    <TextBlock Text="Bunu Salondaki Koltukları Dikdörtgen Seklinde Ayarlamak İçin Kullanabilirsiniz. Başlangıç Sol Üst Bitiş Sağ Alt Buttonu Göstermektedir. İşlem Bu Aralıkta Oluşan Dikdörtgene Uygulanacaktır." Foreground="Red" TextWrapping="Wrap" />
                                                                    <ContentControl Content="{StaticResource Kare}" />
                                                                </StackPanel>
                                                            </RadioButton.ToolTip>
                                                        </RadioButton>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="KOLTUK&#xA;AKTİF Mİ">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding KoltukEtkinMi, UpdateSourceTrigger=PropertyChanged}">
                                                        <CheckBox.ToolTip>
                                                            <StackPanel Width="220" Height="200">
                                                                <TextBlock Text="Bunu Salondaki Koltukları Aktif Pasif Yapmak İçin Kullanabilirsiniz. Seçili Koltuk Aralığında Oturan Kişi Varsa Aktif Pasif İşlemi Bu Koltuklara Uygulanmayacaktır." Foreground="Red" TextWrapping="Wrap" />
                                                                <ContentControl Content="{StaticResource Pasif}" />
                                                            </StackPanel>
                                                        </CheckBox.ToolTip>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="KOLTUK&#xA;GÖRÜNMEZ Mİ">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding KoltukGörünmez, UpdateSourceTrigger=PropertyChanged}">
                                                        <CheckBox.ToolTip>
                                                            <StackPanel Width="220" Height="200">
                                                                <TextBlock Text="Bunu Salonda Koltuklar Arasında Bölme İzlenimi Oluşturmak İçin Kullanabilirsiniz. Seçili Koltuk Aralığında Oturan Kişi Varsa Gizleme İşlemi Bu Koltuklara Uygulanmayacaktır." Foreground="Red" TextWrapping="Wrap" />
                                                                <ContentControl Content="{StaticResource Gizli}" />
                                                            </StackPanel>
                                                        </CheckBox.ToolTip>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Command="{Binding Koltuklar/KoltukAyarla}" CommandParameter="{Binding Mode=OneWay}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Width="16" ice:Freeze="True" Source="Icons/shell32_16802.png" />
                                                            <AccessText Text="UYG_ULA" />
                                                        </StackPanel>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                            <GroupBox Header="KOLTUK EKLE" Margin="0,0,0,2" Template="{StaticResource TintedGroupBox}">
                                <AdornerDecorator>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <DataGrid
                                            x:Name="DgKoltukTürleri"
                                            Margin="0,2,0,0"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            ItemsSource="{Binding KoltukTipleriCollection}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Binding="{Binding KoltukTipi}" Header="TÜRÜ" IsReadOnly="True" />
                                                <DataGridTextColumn Binding="{Binding KoltukFiyati, UpdateSourceTrigger=PropertyChanged}" Header="FİYATI" />
                                                <DataGridTemplateColumn Header="RENGİ">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Slider
                                                                AutoToolTipPlacement="TopLeft"
                                                                Background="{Binding KoltukRenk, Converter={StaticResource IntToBrushConverter}}"
                                                                SmallChange="1"
                                                                Value="{Binding KoltukRenk, UpdateSourceTrigger=PropertyChanged}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button
                                                                x:Name="BtKoltukGüncelle"
                                                                Command="{Binding Güncelle, Mode=OneWay}"
                                                                CommandParameter="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}}"
                                                                DataContext="{StaticResource Koltuklar}">
                                                                <i:Interaction.Triggers>
                                                                    <ei:DataTrigger Binding="{Binding IsEnabled, ElementName=BtKoltukGüncelle}" Value="false">
                                                                        <ei:ChangePropertyAction PropertyName="IsEnabled" TargetObject="{Binding ElementName=DgKoltukTürleri}" Value="False" />
                                                                    </ei:DataTrigger>
                                                                </i:Interaction.Triggers>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Image Width="16" ice:Freeze="True" Source="Icons/update.png" />
                                                                    <AccessText Text="GÜN_CELLE" />
                                                                </StackPanel>
                                                            </Button>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                        <UniformGrid
                                            x:Name="UgKoltukGirişi"
                                            Grid.Row="1"
                                            Height="61"
                                            Columns="2"
                                            DataContext="{StaticResource KoltukTipleri}">
                                            <TextBlock Text="KOLTUK TÜRÜ" />
                                            <TextBox Text="{Binding KoltukTipi, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                                            <TextBlock Text="KOLTUK FİYATI" />
                                            <TextBox Text="{Binding KoltukFiyati, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
                                            <TextBlock />
                                            <Button Command="{Binding Ekle, Mode=OneWay}" CommandParameter="{Binding DataContext, RelativeSource={RelativeSource Self}}">
                                                <StackPanel Orientation="Horizontal">
